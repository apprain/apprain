<SiteSettings>
    <sections>
        <base name="vouchersettings">
            <title>Settings</title>
            <admin_tab>accounts</admin_tab>
        </base>
        <groups>
            <group>
                <base name="opts">
                    <title>Setting</title>
                    <acl>
                        <ugroup>vouchersettings</ugroup>
                    </acl>
                </base>
                <selections>				
                    <selection>
                        <title>Common Cash A/C</title>
                        <name>vouchersettings_cash_account</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
										
                    <selection>
                        <title>Receivable Income A/C</title>
                        <name>vouchersettings_receivable_account</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
										
                    <selection>
                        <title>Payable Expense A/C</title>
                        <name>vouchersettings_payable_account</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>										
					<selection>
                        <title>Sales A/C</title>
                        <name>vouchersettings_sales_account</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Purchase A/C</title>
                        <name>vouchersettings_purchase_account</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>	
					<selection>
                        <title>Default Income Code</title>
                        <name>vouchersettings_income_entrycode</name>
                        <default>FEES</default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Default Cash Receive Code</title>
                        <name>vouchersettings_cash_entrycode</name>
                        <default>CASH_IN</default>
                        <type>inputTag</type>
                    </selection>					
					<selection>
                        <title>Transaction Mode</title>
                        <name>vouchersettings_transaction_mode</name>
                        <default>C</default>
                        <type>selectTag</type>
                        <options>
                            <option value="C">C | Consolidated</option>
                            <option value="S">S | Segregated</option>
                        </options>
                    </selection>					
                </selections>
            </group>
        </groups>
    </sections>
</SiteSettings>
<SiteSettings>
    <sections>
        <base name="themesettings">
            <title>Theme Setting</title>
            <admin_tab>developer</admin_tab>
        </base>				
        <groups>
			<group>
				<base name="logooptions">
					<title>Logo Options</title>
					<acl>
						<ugroup>superadmin</ugroup>
					</acl>
				</base>
				<selections>
					<selection>
						<title>Website Logo</title>
						<name>site_logo</name>
						<hints>Webste Header Logo</hints>
						<default></default>
						<type>fileTag</type>
					</selection>                
				</selections>
			</group>
			<group>
				<base name="themelayout">
					<title>Theme Layout Setup</title>
					<acl>
						<ugroup>superadmin</ugroup>
					</acl>
				</base>
				<selections>					      
					<selection>
                        <title>Page View</title>
                        <name>site_pageview_layout</name>
                        <type>radioTag</type>
                        <default>single_column_layout</default>
                        <options>
							<option value="left_column_layout">Left Column Layout</option>
							<option value="single_column_layout">Single Column Layout</option>
                            <option value="right_column_layout">Right Column Layout</option>                            
                        </options>
                    </selection>            
				</selections>
			</group>		
            <group>
                <base name="common">
                    <title>Common Settings</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>			
                    <selection>
                        <title>Disable Quick Links</title>
                        <name>disable_quick_links</name>
                        <type>radioTag</type>
                        <default>No</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>				
                </selections>
            </group>			
        </groups>
    </sections>
</SiteSettings>
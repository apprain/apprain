<SiteSettings>
    <sections>
        <base name="general">
            <title>Admin Settings</title>
            <admin_tab>developer</admin_tab>
        </base>
        <groups>
            <group>
                <base name="common">
                    <title>Common Settings</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Site Title</title>
                        <name>site_title</name>
                        <default>Lipsum Dolor</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Admin Title</title>
                        <name>admin_title</name>
                        <default>Hodecli Mokoma Mas</default>
                        <type>inputTag</type>
                    </selection>								
					<selection>
						<title>Logo</title>
						<name>logo</name>
						<hints>JPG,PNG</hints>
						<default></default>
						<type>fileTag</type>
					</selection>                
                    <selection>
                        <title>Copy Right Text</title>
                        <name>copy_right_text</name>
                        <default><![CDATA[Copy Right [year] [website]]]></default>
                        <type>inputTag</type>
                    </selection>
                </selections>
            </group>
            <group>
                <base name="emails">
                    <title>Emails</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Admin Email</title>
                        <name>admin_email</name>
                        <default>admin@domsin.com</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Support Email</title>
                        <name>support_email</name>
                        <default>support@domain.com</default>
                        <type>inputTag</type>
                    </selection>

                </selections>
            </group>
        </groups>
    </sections>
	<sections>
        <base name="businessdate">
            <title>Business Date</title>
            <admin_tab>developer</admin_tab>
        </base>
        <groups>
            <group>
                <base name="date">
                    <title>System Date</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>System Business Date</title>
                        <name>business_date</name>
                        <default></default>
						<hints><![CDATA[User format YYYY-MM-DD, For example: 1971-12-16<br /> Keep blank to use System Present Date]]></hints>
                        <type>inputTag</type>
                    </selection>                    
                </selections>
            </group>
            <group>
                <base name="time">
                    <title>Time</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>System Business Time</title>
                        <name>business_time</name>
                        <default></default>
						<hints><![CDATA[User format H:m:s, For example: 13:15:30 equivalent to 01:15:30 PM<br /> Keep blank to use System Present Time]]></hints>						
                        <type>inputTag</type>
                    </selection>
                </selections>
            </group>
        </groups>
    </sections>	
    <sections>
        <base name="opts">
            <title>Site Options</title>
            <admin_tab>developer</admin_tab>
        </base>
        <groups>
            <group>
                <base name="options">
                    <title>Options</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Add new page in Site Menu</title>
                        <name>add_new_page_in_menu_automarically</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Disable Static Meta</title>
                        <name>disable_page_meta_options</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Disable Menu Icon</title>
                        <name>disable_menu_icon</name>
                        <type>radioTag</type>
                        <default>No</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
					<selection>
                        <title>Quick Navigation Widget</title>
                        <name>quick_navigation_widget</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
					<selection>
                        <title>Show Calander</title>
                        <name>quick_navigation_show_calander</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>					
                    <selection>
                        <title>Activity Widget</title>
                        <name>activity_widget</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Leave a Message</title>
                        <name>leave_amessage_widget</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Flash File Uploader</title>
                        <name>flash_file_uploader</name>
                        <type>radioTag</type>
						<hints>This setting is subject to security, Please keep inactive after upload.</hints>
                        <default>No</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Currency</title>
                        <name>currency</name>
                        <default>$</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Default Pagination</title>
                        <name>default_pagination</name>
                        <default>admin</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Site Alived</title>
                        <name>is_site_alive</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>Image Width</title>
                        <name>large_image_width</name>
                        <default>500</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Image Height</title>
                        <name>large_image_height</name>
                        <default>500</default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Admin Login BG Image</title>
                        <name>admin_login_background</name>
                        <default></default>
                        <type>fileTag</type>
                    </selection>
                    <selection>
                        <title>File Resouce Token</title>
                        <name>fileresource_id</name>
						<hints>This String use to profle uploaded files</hints>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Admin Landing Page</title>
                        <name>admin_landing_page</name>
						<hints>Landing page after admin login(controller/action example: admin/introduction)</hints>
                        <default>admin/introduction</default>
                        <type>inputTag</type>
                    </selection>
                </selections>
            </group>
            <group>
                <base name="rich_text_editor">
                    <title>WYSIWYG Editor</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Enable Editor</title>
                        <name>rich_text_editor</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <!-- selection>
                        <title>Editor Mode</title>
                        <name>rich_text_editor_mode</name>
                        <type>radioTag</type>
                        <default>Simple</default>
                        <options>
                            <option value="Simple">Simple</option>
                            <option value="Advanced">Advanced</option>
                        </options>
                    </selection -->
                </selections>
            </group>
			<group>
                <base name="emails">
                    <title>Emails</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
					<selection>
                        <title>Enabled</title>
                        <name>emailsetup_enabled</name>
                        <type>radioTag</type>
                        <default>Yes</default>
                        <options>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </options>
                    </selection>
                    <selection>
                        <title>From Email</title>
                        <name>emailsetup_from_email</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
                    <selection>
                        <title>Host</title>
                        <name>emailsetup_host</name>
                        <default>localhost</default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Port</title>
                        <name>emailsetup_port</name>
                        <default>25</default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Username</title>
                        <name>emailsetup_username</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>
					<selection>
                        <title>Password</title>
                        <name>emailsetup_password</name>
                        <default></default>
                        <type>inputTag</type>
                    </selection>

                </selections>
            </group>			
            <group>
                <base name="time_zone">
                    <title>Time Zone</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Time zone</title>
                        <name>time_zone</name>
                        <type>selectTag</type>
                        <default>America/Los_Angeles</default>
                        <options/>
                    </selection>
					<selection>
                        <title>Time Padding</title>
						<hints>Adjust in Minutes</hints>
                        <name>time_zone_padding</name>
                        <type>inputTag</type>
                        <default></default>
                        <options/>
                    </selection>				
                </selections>
            </group> 
			<group>
                <base name="database">
                    <title>Database Version</title>
                    <acl>
                        <ugroup>superadmin</ugroup>
                    </acl>
                </base>
                <selections>
                    <selection>
                        <title>Database Version</title>
                        <name>db_version</name>
                        <type>inputTag</type>
                        <default>1.0.1</default>
                        <options/>
                    </selection>
                </selections>
            </group>
        </groups>
    </sections>
</SiteSettings>